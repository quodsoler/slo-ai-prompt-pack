---
import BaseLayout from '../layouts/BaseLayout.astro';
import { termsAndConditions } from '../data/legal-content';
---

<BaseLayout
  title="Términos y Condiciones | Pack de 275+ Prompts IA"
  description="Términos y condiciones de contratación del Pack de 275+ Prompts IA para Marketing y Negocios. Condiciones de venta, garantía y devolución."
  canonicalPath="/condiciones"
>
  <article class="py-12 md:py-16 px-4">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl font-bold mb-10">{termsAndConditions.title}</h1>

      {termsAndConditions.sections.map((section) => (
        <div class="mb-8">
          <h2 class="text-xl font-semibold text-text-primary mb-4">{section.heading}</h2>
          <div class="text-text-secondary leading-relaxed whitespace-pre-line">{section.content}</div>
        </div>
      ))}
    </div>
  </article>
</BaseLayout>
