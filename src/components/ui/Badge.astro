---
interface Props {
  variant?: 'purple' | 'blue' | 'green';
  class?: string;
}

const { variant = 'purple', class: className = '' } = Astro.props;

const variantClasses = {
  purple: 'bg-primary/10 text-primary-light',
  blue: 'bg-accent/10 text-accent-light',
  green: 'bg-success/10 text-success',
};
---

<span class={`inline-block text-sm font-medium px-2 py-1 rounded-full ${variantClasses[variant]} ${className}`}>
  <slot />
</span>
