---
import Badge from '../ui/Badge.astro';
import PromptShowcaseCarousel from './PromptShowcaseCarousel.tsx';
import { promptExamples } from '../../data/prompt-examples';
---

<section id="ver-prompts" class="py-16 md:py-24 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-10">
      <Badge variant="blue">Míralo en Acción</Badge>
      <h2 class="text-2xl md:text-3xl font-bold mt-4">
        Mira lo que puedes hacer en menos de 2 minutos
      </h2>
      <p class="text-text-secondary mt-3">
        Copia el prompt, pégalo en ChatGPT o Claude, y obtén resultados profesionales al instante
      </p>
    </div>

    <PromptShowcaseCarousel examples={promptExamples} client:visible />
  </div>
</section>
