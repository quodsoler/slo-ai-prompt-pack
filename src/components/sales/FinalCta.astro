---
import CtaButton from '../ui/CtaButton.astro';
import Badge from '../ui/Badge.astro';
import { finalCta } from '../../data/sales-copy';
import { productConfig } from '../../data/product-config';
---

<section id="final-cta" class="py-16 md:py-24 px-4">
  <div class="max-w-4xl mx-auto">
    <!-- Urgency banner -->
    <div class="bg-warning/10 border border-warning/30 rounded-xl p-4 md:p-6 text-center mb-12">
      <p class="text-warning font-medium">{finalCta.urgencyBanner}</p>
    </div>

    <!-- Two-option comparison -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      <!-- Option A (stay) -->
      <div class="bg-error/5 border border-error/20 rounded-2xl p-6">
        <p class="text-sm text-error font-medium mb-3">Opción A:</p>
        <p class="text-text-muted leading-relaxed">{finalCta.optionA}</p>
      </div>

      <!-- Option B (buy) -->
      <div class="bg-success/5 border border-success/20 rounded-2xl p-6">
        <p class="text-sm text-success font-medium mb-3">Opción B:</p>
        <p class="text-text-secondary leading-relaxed">{finalCta.optionB}</p>
      </div>
    </div>

    <!-- Closing headline -->
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-8">
      {finalCta.closingHeadline}
    </h2>

    <!-- CTA -->
    <div class="text-center mb-6">
      <CtaButton section="final" label={productConfig.ctaLabels.final} />
    </div>

    <!-- Guarantee reminder -->
    <div class="text-center mb-10">
      <Badge variant="green">Garantía de 30 días — sin preguntas</Badge>
    </div>

    <!-- P.S. -->
    <div class="max-w-3xl mx-auto bg-surface/50 border border-card-border/20 rounded-xl p-6">
      <p class="text-text-muted leading-relaxed">
        <span class="font-semibold text-text-secondary">P.D.</span> {finalCta.ps}
      </p>
    </div>
  </div>
</section>
