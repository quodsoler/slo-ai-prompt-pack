---
import Badge from '../ui/Badge.astro';
import Card from '../ui/Card.astro';
import ProductContentsTabs from './ProductContentsTabs.tsx';
import { promptCategories, bonusItems } from '../../data/prompt-categories';
---

<section id="categorias" class="py-16 md:py-24 px-4 bg-surface/50">
  <div class="max-w-5xl mx-auto">
    <div class="text-center mb-12">
      <Badge variant="purple">Contenido Completo</Badge>
      <h2 class="text-2xl md:text-3xl font-bold mt-4">
        ¿Qué Incluye el Pack?
      </h2>
      <p class="text-text-secondary mt-3">
        275+ prompts organizados en 3 grandes secciones, más bonus exclusivos
      </p>
    </div>

    <!-- Tabs (Preact island) -->
    <ProductContentsTabs categories={promptCategories} client:visible />

    <!-- Bonus items -->
    <div id="guia" class="mt-12">
      <h3 class="text-xl font-semibold text-center mb-6">Bonus Incluidos</h3>
      <div class="grid sm:grid-cols-3 gap-4">
        {bonusItems.map((bonus) => (
          <Card hover>
            <h4 class="font-semibold text-primary-light mb-2">{bonus.title}</h4>
            <p class="text-text-secondary text-sm">{bonus.description}</p>
          </Card>
        ))}
      </div>
    </div>
  </div>
</section>
