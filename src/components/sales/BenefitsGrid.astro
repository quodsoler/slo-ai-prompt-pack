<section id="benefits" class="py-16 md:py-24 px-4 bg-surface/50">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-12">
      Lo que cambia cuando tienes los prompts correctos
    </h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {benefits.map((benefit) => (
        <Card hover>
          <div class="mb-4">
            <svg class="w-8 h-8 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={iconMap[benefit.icon] || iconMap.chart} />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-2">{benefit.title}</h3>
          <p class="text-text-secondary text-sm leading-relaxed">{benefit.text}</p>
        </Card>
      ))}
    </div>
  </div>
</section>
