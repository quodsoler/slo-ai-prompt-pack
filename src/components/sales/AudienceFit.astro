---
import { audienceFit, audienceNotFit } from '../../data/sales-copy';
---

<section id="audience-fit" class="py-16 md:py-24 px-4">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-12">
      Â¿Es Este Pack Para Ti?
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- For you -->
      <div class="bg-success/5 border border-success/20 rounded-2xl p-6 md:p-8">
        <h3 class="text-lg font-semibold text-success mb-6">Este pack es para ti si...</h3>
        <ul class="space-y-4">
          {audienceFit.map((item) => (
            <li class="flex gap-3 items-start">
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-text-secondary">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Not for you -->
      <div class="bg-error/5 border border-error/20 rounded-2xl p-6 md:p-8">
        <h3 class="text-lg font-semibold text-error mb-6">Este pack NO es para ti si...</h3>
        <ul class="space-y-4">
          {audienceNotFit.map((item) => (
            <li class="flex gap-3 items-start">
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
              <span class="text-text-muted">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
